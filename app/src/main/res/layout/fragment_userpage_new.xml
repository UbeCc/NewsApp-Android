<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:id="@+id/topblock"
        android:backgroundTint="#ffffff">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:contentScrim="#000000"
            android:layout_gravity="center_vertical"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="parallax"
                android:src="@drawable/new_ic_launcher_background"
                android:backgroundTint="#ffffff"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/app_name"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_below="@id/homepage_header_layout"
                android:layout_centerHorizontal="true"
                android:textColor="#ffffff"
                android:text="@string/app_name"
                android:textSize="25sp"/>
            <RelativeLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="60dp"
                android:layout_below="@id/app_name"
                android:layout_gravity="center_horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/imageview_placeholder"
                    android:elevation="12dp"
                    android:id="@+id/homepage_header_layout"
                    app:cardCornerRadius="50dp"
                    android:innerRadius="0dp"
                    android:layout_centerHorizontal="true"
                    android:shape="ring"
                    android:thicknessRatio="1.9">
                    <ImageView
                        android:layout_height="150dp"
                        android:layout_width="150dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/imageview_placeholder"
                        android:id="@+id/homepage_header"
                        android:src="@drawable/profile_photo"
                        android:shape="ring"
                        android:layout_centerHorizontal="true">
                    </ImageView>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:paddingTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nickname"
                    android:layout_below="@id/homepage_header_layout"
                    android:layout_centerHorizontal="true"
                    android:textColor="#ffffff"
                    android:text="这是昵称"
                    android:textSize="25sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/registerid"
                    android:layout_below="@id/nickname"
                    android:layout_centerHorizontal="true"
                    android:textColor="#ffffff"
                    android:text="这是用户名"
                    android:textSize="15sp" />
                <TextView
                    android:paddingTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/description"
                    android:layout_below="@id/registerid"
                    android:layout_centerHorizontal="true"
                    android:textColor="#ffffff"
                    android:text="这是个性签名"
                    android:textSize="20sp" />

            </RelativeLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/topblock"
            android:gravity="bottom"
            android:orientation="vertical">
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/collect_button"
                android:text="收藏"
                android:textColor="#000000" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/comment_button"
                android:text="评论"
                android:textColor="#000000" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/lastsee_button"
                android:text="最近浏览"
                android:textColor="#000000" />
        </LinearLayout>
</RelativeLayout>